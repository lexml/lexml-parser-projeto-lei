<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">	
	<Appenders>
		<Console name="ConsoleOut" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />		
		</Console>
		<Console name="ConsoleErr" target="SYSTEM_ERR">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />				
		</Console>		
	</Appenders>
	<Loggers>
		<Logger name="br.gov.lexml.parser.pl" level="INFO" additivity="false">			
            <AppenderRef ref="ConsoleErr"/>            	
		</Logger> 
		<Logger name="br.gov.lexml.schema.validator.Validador$MyLSResourceResolver" level="OFF"/>		
		<Root level="info">        
            <AppenderRef ref="ConsoleErr">
            	<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </AppenderRef>
        </Root>
	</Loggers>
</Configuration>